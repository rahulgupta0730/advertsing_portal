<div class="container">
  <div class="row">
    <br>
    <br>
  </div>
  <%= form_for @slot ,  url: '/slots/create', html: { autocomplete: "off" } ,  method: :post do |f| %>
    <div class="row_pane">
      <%if @slot.errors.any?  %>
        <div class="row" >
          <div class="offset-md-4 col-md-4">
            <div class="col bg-danger text-center" >
              <ul>
                <% @slot.errors.full_messages.each do |message| %>
                  <li class="danger_message"><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <br>
      <%end%>
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center">Add Slot</h1>
          <br>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="row">
            <div class="offset-md-1 col-md-3 text-right">
              <%= f.label :start_time, 'Start Time' , {class: 'custom_label'}%>
            </div>
            <div class="col-md-8">
             <%= f.text_field :start_time , {class: "form-control" }%>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-3 text-right">
              <%= f.label :end_time, 'End Time' , {class: 'custom_label'}%>
            </div>
            <div class="col-md-8">
             <%= f.text_field :end_time , {class: "form-control" }%>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <br>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="row">
            <div class="offset-md-1 col-md-3 text-right">
              <%= f.label :base_price, 'Base Price' , {class: 'custom_label'}%>
            </div>
            <div class="col-md-8">
             <%= f.number_field :base_price , {class: "form-control" }%>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <br>
      </div>
      <div class="row">
        <div class="offset-md-6 col-md-6">
          <div class="row">
            <div class="col-md-11 text-right">
              <%= f.submit "Create Slot", class: "btn btn-primary button_style"%>      
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>
