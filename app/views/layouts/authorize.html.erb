<!DOCTYPE html>
<html>
  <head>
    <title>Advertising Portal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css">

  <body>
    <nav class="navbar navbar-expand-lg navbar-light nav_bar_custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard"><h1>Advertising Portal</h1></a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a class="nav-link" href="/email_queue/index"></span >Email Queue</a></li>
          <li><a class="nav-link" href="/email_queue/clear_emails"></span >Clear Email</a></li>
          <% if policy(Slot).add? %>
              <li><a class="nav-link" href="/slots/add"></span >Add Slots</a></li>
          <% end %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%=current_user_name(session[:user_id])%>
            </a>
            <%=role_name(session[:user_id])%>
           <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="/logout">Lagout</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  <%= yield %>
  </body>
</html>
